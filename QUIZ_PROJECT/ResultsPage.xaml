<Page x:Class="QUIZ_PROJECT.ResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ResultsPage" Background="AliceBlue">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="View Results" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Table of Results -->
            <DataGrid x:Name="ResultsDataGrid" AutoGenerateColumns="False" Height="316" Width="513">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Student" Binding="{Binding Student.Name}" Width="100"/>
                    <DataGridTextColumn Header="Quiz" Binding="{Binding Quiz.Title}" Width="150"/>
                    <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="100"/>
                    <DataGridTextColumn Header="Date Taken" Binding="{Binding DateTaken}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
